// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "tsc-watch",
      "problemMatcher": ["$tsc-watch"],
      "path": "packages/ext/",
      "isBackground": true,
      "label": "npm: tsc-watch - packages/ext",
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": [
        {
          "base": "$ts-webpack",
          "background": {
            "activeOnStart": true,
            "beginsPattern": {
              "regexp": "Compiling.*?|Compilation .*?starting|Compiler starting"
            },
            "endsPattern": {
              "regexp": "[Cc]ompiled (.*?successfully|with .*?error|with .*?warnings)|[Cc]ompilation .*?finished"
            }
          }
        }
      ],
      "isBackground": true,
      "path": "packages/ext/",
      "label": "npm: watch - packages/ext",
      "group": "build",
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "type": "npm",
      "script": "compile",
      "path": "packages/ext/",
      "label": "npm: compile - packages/ext",
      "group": "build"
    },
    {
      "type": "npm",
      "script": "test:vscode-watch",
      "problemMatcher": ["$tsc-watch"],
      "isBackground": true,
      "path": "packages/ext/",
      "group": "build",
      "label": "npm: test-watch - packages/ext"
    }
  ]
}
