{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "lib": ["es6", "DOM"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true /* enable all strict type-checking options */,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true

    //"noUnusedParameters": true
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test", "**/__tests__", "src/test"],
  "references": [
    {"path": "../extractor/tsconfig.build.json"},
    {"path": "../common/tsconfig.build.json"}
  ]
}
