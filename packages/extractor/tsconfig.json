{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "lib": ["es2019"],
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "common": ["../common/src"],
      "@common/*": ["src/common/*"]
    },
    "composite": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
